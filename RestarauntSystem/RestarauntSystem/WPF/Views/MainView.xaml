<Window x:Class="RestarauntSystem.WPF.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestarauntSystem.WPF.Views"
        xmlns:vm="clr-namespace:RestarauntSystem.WPF.ViewModel"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню навигации -->
        <Menu Grid.Row="0">
            <MenuItem Header="Заказы" Command="{Binding ShowOrdersCommand}"/>
            <MenuItem Header="Столы" Command="{Binding ShowTablesCommand}"/>
            <MenuItem Header="Меню" Command="{Binding ShowMenuCommand}"/>
            <MenuItem Header="Бронирования" Command="{Binding ShowReservationsCommand}"/>
            <MenuItem Header="Сотрудники" Command="{Binding ShowEmployeesCommand}"/>
            <MenuItem Header="Инвентарь" Command="{Binding ShowInventoryCommand}"/>
        </Menu>

        <!-- Контентная область -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
