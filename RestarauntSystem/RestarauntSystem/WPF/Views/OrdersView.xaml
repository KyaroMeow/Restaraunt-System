<UserControl x:Class="RestarauntSystem.WPF.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestarauntSystem.WPF.Views"
             xmlns:converter="clr-namespace:RestarauntSystem.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:OrderStatusToTextConverter x:Key="OrderStatusToTextConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Обновить" Command="{Binding LoadOrdersCommand}" Margin="0 0 10 0"/>
            <ComboBox ItemsSource="{Binding Tables}" DisplayMemberPath="TableId"
                      SelectedItem="{Binding SelectedTable}" Width="120" Margin="0 0 10 0"/>
            <Button Content="Создать заказ" Command="{Binding CreateOrderCommand}"/>
        </StackPanel>

        <!-- Список заказов -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding OrderId}" Width="Auto"/>
                <DataGridTextColumn Header="Стол" Binding="{Binding TableId}" Width="Auto"/>
                <DataGridTextColumn Header="Статус" 
                                   Binding="{Binding StatusId, Converter={StaticResource OrderStatusToTextConverter}}" Width="*"/>
                <DataGridTextColumn Header="Время" Binding="{Binding OrderTime, StringFormat=HH:mm}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Детали заказа -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Margin="0 10 0 0" Padding="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DataGrid ItemsSource="{Binding SelectedOrder.OrderItems}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Блюдо" Binding="{Binding Dish.DishName}"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Dish.Price, StringFormat={}{0:C}}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Column="1" Margin="10 0 0 0">
                    <Button Content="Завершить заказ" Command="{Binding CompleteOrderCommand}"
                            Margin="0 0 0 10" Padding="10 20" FontWeight="Bold" />

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
