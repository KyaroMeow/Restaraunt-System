<UserControl x:Class="RestarauntSystem.WPF.Views.TablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestarauntSystem.WPF.Views"
             xmlns:converter="clr-namespace:RestarauntSystem.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:NullToTextConverter x:Key="StatusToBrushConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <DatePicker SelectedDate="{Binding ReservationDate}" Margin="0 0 10 0" Width="150"/>
            <Button Content="Обновить список" Command="{Binding LoadTablesCommand}" Padding="10 5"/>
        </StackPanel>

        <!-- Таблица столов -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Tables}" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedTable}"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding TableId}" Width="60"/>
                <DataGridTextColumn Header="Зона" Binding="{Binding Zone.ZoneName}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status.StatusName}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель бронирования -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Выбор клиента -->
                <StackPanel Grid.Column="0" Margin="0 0 20 0">
                    <TextBlock Text="Клиент:" Margin="0 0 0 5"/>
                    <ComboBox ItemsSource="{Binding Customers}" 
                              DisplayMemberPath="FullName"
                              SelectedItem="{Binding SelectedCustomer}" 
                              Width="200"/>
                </StackPanel>

                <!-- Информация о выбранном столе -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Margin="0 0 20 0">
                        <TextBlock Text="Выбран стол:" Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding SelectedTable.TableId}" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Текущий статус:" Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding SelectedTable.Status.StatusName}" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка бронирования -->
                <Button Grid.Column="2" 
                        Content="Забронировать" 
                        Command="{Binding ReserveTableCommand}"
                        Padding="20 5" 
                        VerticalAlignment="Center"
                        FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
