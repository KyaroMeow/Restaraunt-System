<UserControl x:Class="RestarauntSystem.WPF.Views.TablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestarauntSystem.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <DatePicker SelectedDate="{Binding ReservationDate}" Margin="0 0 10 0" Width="150"/>
            <Button Content="Обновить" Command="{Binding LoadTablesCommand}" Margin="0 0 10 0"/>
        </StackPanel>

        <!-- Список столов -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Tables}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="100" Height="100" Margin="5" BorderBrush="Gray" BorderThickness="1"
                            Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding TableNumber}" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" Margin="0 5 0 0"/>
                            <TextBlock Text="{Binding Zone.ZoneName}" HorizontalAlignment="Center" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Форма бронирования -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Margin="0 10 0 0" Padding="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0 0 10 0">
                    <TextBlock Text="Выберите клиента:" Margin="0 0 0 5"/>
                    <ComboBox ItemsSource="{Binding Customers}" DisplayMemberPath="FullName"
                              SelectedItem="{Binding SelectedCustomer}" Width="200"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Выберите стол:" Margin="0 0 0 5"/>
                    <TextBlock Text="{Binding SelectedTable.TableNumber}" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Забронировать" Command="{Binding ReserveTableCommand}"
                        VerticalAlignment="Bottom" Padding="15 5" Margin="10 0 0 0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
